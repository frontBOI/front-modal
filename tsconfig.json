{
  "compilerOptions": {
    "target": "es6" /* Set the target ECMAScript version */,
    "module": "commonjs" /* Specify module code generation */,
    "declaration": true /* Generates corresponding .d.ts files */,
    "outDir": "./dist" /* Output directory for compiled files */,
    "strict": true /* Enable all strict type-checking options */,
    "esModuleInterop": true /* Enables interoperability between CommonJS and ES Modules */,
    "sourceMap": true /* Generate source maps */,
    "resolveJsonModule": true /* Allows importing JSON modules */,
    "declarationDir": "./types" /* Output directory for .d.ts files */,
    "rootDir": "./src" /* Root directory for source files */,
    "jsx": "react" /* Specify JSX transpilation target (react or preserve) */
  },
  "include": ["src"] /* List of directories/files to include in compilation */
}
